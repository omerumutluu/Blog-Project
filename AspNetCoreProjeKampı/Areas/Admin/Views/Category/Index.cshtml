@using EntityLayer.Concrete
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>
<br />
<table class="table table-bordered" style="text-align:center">
    <th>#</th>
    <th>Kategori Adı</th>
    <th>Pasif Yap</th>
    <th>Aktif Yap</th>
    <th>Düzenle</th>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId/" id="DeleteBtn" class="btn btn-primary">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}))
<br />
<br />
<div style="text-align:center">
    <a href="/Admin/Category/AddCategory/" class="btn btn-primary" style="color:white"> Yeni Kategori</a>
</div>